    {{>meta}}
</head>

<body>
    {{>navBar}}
    <div class="container">
        <h2 class="heading">Patient Details</h2>

        <div class="form">
            <form action="/patient/addpatient" method="post">
                <label for="name" class="label" required>Name: </label>
                <input type="text" id="name" name="name" class="inp"><br>

                <label for="age" class="label">Age:</label>
                <input type="text" id="age" name="age" class="inp"><br>

                <label for="gender" class="label" >Gender: </label>
                <input type="radio" name="gender" id="male" value="male">
                <label for="male" class="label">Male</label>

                <input type="radio" name="gender" id="female" value="female">
                <label for="female" class="label">Female</label><br>

                <label for="phno" class="label">Phone No:</label>
                <input type="text" id="phno" name="phno" class="inp"><br>

                <label for="address" class="label">Address:</label>
                <input type="text" id="address" name="address" class="inp"><br>
                
                <label for="dov" class="label">Date of First Visit:</label>
                <input type="date" id="dov" name="dov" class="inp"><br>
                
                <label for="height" class="label">Height: </label>
                <input type="number" id="height" name="height" class="inp"><br>
                
                <label for="weight" class="label">Weight: </label>
                <input type="number" id="weight" name="weight" class="inp"><br>

                <label for="prakarti" class="label">Prakarti: </label>
                <select name="prakarti" id="prakarti">
                    <option value="V">V</option>
                    <option value="P">P</option>
                    <option value="K">K</option>
                    <option value="VP">VP</option>
                    <option value="VK">VK</option>
                    <option value="PK">PK</option>
                    <option value="VPK">VPK</option>
                </select><br>

                {{!-- <label for="complaint" class="label">Complaints: </label>
                <textarea name="complaint" id="complaint" cols="30" rows="2"></textarea><br>

                <label for="diagnosis">Diagnosis: </label>
                <input type="text" id="diagnosis" name="diagnosis"><br>
                
                <label for="treatmentPeriod">Treatment Period:</label>
                <input type="text" id="treatmentPeriod" name="treatmentPeriod"><br>
                
                <label for="payment">Payment: </label>
                <input type="number" id="payment" name="payment"><br>
                
                <label for="remarks">Remarks:</label>
                <textarea name="remarks" id="remarks" cols="30" rows="2"></textarea><br> --}}
                
                <button type="submit" value="Add Patient" class="btn">Submit</button>
            </form>
        </div>
    </div>
    {{>scripts}}
</body>

</html>